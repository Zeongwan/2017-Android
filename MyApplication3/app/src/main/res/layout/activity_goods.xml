<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#acabab"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/goBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:src="@mipmap/back" />
        <ImageView
            android:id="@+id/goodPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arla"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/goodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:tag="0"
            android:id="@+id/star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/full_star"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/below"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/goodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D5000000"
                android:layout_margin="8dp"
                android:text="￥100" />

            <TextView
                android:id="@+id/goodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goodPrice"
                android:layout_marginLeft="8dp"
                android:textColor="#8A000000"
                android:text="重量" />

            <TextView
                android:id="@+id/goodInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goodPrice"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/goodType"
                android:textColor="#8A000000"
                android:text="300g" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/chat"
                    android:background="#1E000000"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/shop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="6dp"
                    android:src="@mipmap/shoplist">
                </ImageView>

            </LinearLayout>
            <View
                android:id="@+id/hori"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#1E000000"
                android:layout_below="@id/goodType"/>
            <TextView
                android:id="@+id/moreData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hori"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:text="更多产品信息"/>
            <View
                android:id="@+id/bigHori"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@+id/moreData"
                android:background="#1E000000"></View>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/moreInfo"
                android:layout_below="@id/bigHori">
            </ListView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>