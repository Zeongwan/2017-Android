<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.midapplication.MainActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/initPage"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <Button
            android:id="@+id/showList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人物"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="0dp" />
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/showList"
            android:text="添加"
            tools:layout_editor_absoluteX="0dp" />
        <Button
            android:id="@+id/playMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/add"
            android:text="播放"
            tools:layout_editor_absoluteX="0dp" />
        <Button
            android:id="@+id/find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/playMusic"
            android:text="查询"
            tools:layout_editor_absoluteX="0dp" />
    </android.support.constraint.ConstraintLayout>
    <ListView
        android:visibility="invisible"
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"></ListView>
</android.support.constraint.ConstraintLayout>
