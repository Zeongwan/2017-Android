<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.midapplication.addActivity">
<android.support.constraint.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ImageView
    android:id="@+id/addPic"
    android:layout_width="200dp"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:src="@drawable/c"
    />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPic">
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:maxLength="8"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/bdDateInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInputLayout">
        <EditText
            android:id="@+id/bdDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入生卒"
            android:inputType="date"
            android:padding="8dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:maxLength="16"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/homeInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bdDateInputLayout">
        <EditText
            android:id="@+id/homeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入籍贯"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:maxLength="20"
            />
    </android.support.design.widget.TextInputLayout>
    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/homeInputLayout"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="18sp"
            android:layout_marginRight="15dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:layout_marginRight="15dp"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/sexElse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textSize="18sp" />
    </RadioGroup>
    <RadioGroup
        android:id="@+id/radioNations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/radioSex"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/shu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蜀"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/wu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴"
            android:layout_marginRight="8dp"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/wei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魏"
            android:layout_marginRight="8dp"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/donghan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东汉"
            android:layout_marginRight="8dp"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/elseNation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textSize="18sp" />
    </RadioGroup>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/introInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioNations">
        <EditText
            android:id="@+id/introInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入简介"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/makeAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        app:layout_constraintTop_toBottomOf="@+id/introInputLayout"
        app:layout_constraintRight_toLeftOf="@+id/cancelAdd"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/cancelAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        app:layout_constraintTop_toBottomOf="@+id/introInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/makeAdd"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>
