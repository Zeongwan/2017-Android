<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.midapplication.DetailedPage">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="156px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pic"
            android:id="@+id/name"
            android:layout_marginLeft="24px"
            android:paddingTop="12px"
            android:text="周瑜"
            android:textColor="#000000"
            android:typeface="monospace"
            android:layout_marginBottom="12px"
            />
        <ImageView
            android:id="@+id/pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/c"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:text="男"
            android:textSize="36px"
            android:layout_margin="24px"
            />
        <TextView
            android:id="@+id/bdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sex"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:text="175-210"
            android:textSize="36px"
            android:layout_margin="24px"
            />
        <Spinner
            android:id="@+id/nation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/nations"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="24px"
            ></Spinner>
        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bdDate"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:text=
                "扬州庐江郡舒(安徽合肥市庐江县西南)"
            android:textSize="36px"
            android:layout_margin="24px"
            />
        <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:text=
                "自幼与孙策交好，孙策于袁术麾下初崛起时曾随之扫荡江东，为中郎将。孙策遇刺身亡后，周瑜与张昭一起共同辅佐孙权，为中护军，执掌军政大事。周瑜在江陵进行军事准备时死于巴陵，时年三十六岁。孙权曾为其素服吊丧。"

            android:textSize="36px"
            android:lineSpacingExtra="24px"
            android:layout_margin="24px"
            android:textColor="#000000"
            />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
